<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Gradient for Border -->
    <item android:top="8dp" android:bottom="8dp">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#EDEDED"
                android:endColor="#FFFFFF"
                android:angle="135"/>
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- White Border -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Main Gradient Background -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <gradient
                android:startColor="#3498db"
                android:centerColor="#2196F3"
                android:endColor="#2980b9"
                android:angle="135"/>
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner Gradient for Shadow Effect -->
    <item android:bottom="4dp">
        <shape>
            <gradient
                android:startColor="#33000000"
                android:centerColor="#22000000"
                android:endColor="#11000000"
                android:angle="270" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
